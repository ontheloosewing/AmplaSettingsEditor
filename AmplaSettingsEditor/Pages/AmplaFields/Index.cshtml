@page 
@model AmplaSettingsEditor.Pages.AmplaFields.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-page="Create">Create New</a>
</p>

<form>
    <p>
        Title: <input type="text" name="SearchString">
        <input type="submit" value="Filter" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AmplaField[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AmplaField[0].NameEnglish)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AmplaField[0].NameRussian)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AmplaField[0].NameFull)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AmplaField[0].RpId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AmplaField[0].RpNameFull)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AmplaField[0].SapId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AmplaField[0].CreatedDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AmplaField[0].CreatedBy)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.AmplaField) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NameEnglish)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NameRussian)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NameFull)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RpId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RpNameFull)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SapId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedBy)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
